    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "TaskapiApplication",
            "request": "launch",
            "mainClass": "com.example.taskapi.TaskapiApplication"
        },
        {
            "type": "java",
            "name": "ProductApiApplication",
            "request": "launch",
            "mainClass": "com.example.product_api.ProductApiApplication",
            "projectName": "product-api"
        },
        {
            "type": "java",
            "name": "HelloworldapiApplication",
            "request": "launch",
            "mainClass": "com.example.helloworldapi.HelloworldapiApplication",
            "projectName": "helloworldapi"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "pwa-chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]

} 